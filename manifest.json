{
    "manifest_version": 2,
    "name": "NixOS Options Search Engine",
    "description": "Adds NixOS options search engine",
    "version": "1.0",
    "author": "googijh",
    "homepage_url": "https://github.com/googijh/firefox-nixos-options-extension",
    "developer": {
      "name": "googijh",
      "url": "https://github.com/googijh"
    },
    "chrome_settings_overrides": {
      "search_provider": {
        "name": "NixOS Options",
        "search_url":"https://search.nixos.org/options?query={searchTerms}",
        "keyword": "@no",
        "favicon_url": "https://nixos.org/favicon.ico",
        "is_default": false,
        "encoding": "UTF-8"
      }
    }
}
